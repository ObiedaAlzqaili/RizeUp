@model RizeUp.DTOs.PortfolioDto

@{
    ViewData["Title"] = "Edit Portfolio";
}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/EditPortfolio.css" asp-append-version="true" />


<div class="container py-5">
    <div class="row">
        <!-- Side Navigation -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#" data-section="personal-info">
                                <i class="fas fa-user-circle me-2"></i> Personal Info
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-section="services">
                                <i class="fas fa-concierge-bell me-2"></i> Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-section="projects">
                                <i class="fas fa-project-diagram me-2"></i> Projects
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-section="skills">
                                <i class="fas fa-lightbulb me-2"></i> Skills
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <form asp-controller="Portfolio"
                  asp-action="UpdatePortfolio"
                  method="post"
                  enctype="multipart/form-data"
                  id="portfolioForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="ModifiedDate" />
                <input type="hidden" asp-for="ImageBase64" />
                <input type="hidden" asp-for="ImageFileName" />
                <input asp-for="ImageContentType" type="hidden" />

                <!-- Personal Info Section -->
                <div class="form-section active" id="personal-info-section">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-user-circle me-2"></i> Personal Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Title" class="form-label"></label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Address" class="form-label"></label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Summery" class="form-label"></label>
                                    <textarea asp-for="Summery" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Summery" class="text-danger"></span>
                                </div>
                            </div>

                            <h6 class="section-title mt-4">Social Links</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="GitHubLink" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fab fa-github"></i></span>
                                        <input asp-for="GitHubLink" class="form-control" />
                                    </div>
                                    <span asp-validation-for="GitHubLink" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LinkedinLink" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fab fa-linkedin"></i></span>
                                        <input asp-for="LinkedinLink" class="form-control" />
                                    </div>
                                    <span asp-validation-for="LinkedinLink" class="text-danger"></span>
                                </div>
                            </div>

                            <h6 class="section-title mt-4">Profile Image</h6>
                            <div class="row g-3">
                                <div class="col-md-6 d-flex align-items-start">
                                    <img id="profileImagePreview"
                                         src="data:@Model.ImageContentType;base64,@Model.ImageBase64"
                                         class="image-preview me-4"
                                         alt="Profile Preview" />
                                    <div class="flex-grow-1">
                                        <label asp-for="PersonalImage" class="form-label">Upload New Image</label>
                                        <input asp-for="PersonalImage"
                                               type="file"
                                               class="form-control"
                                               accept="image/*" />
                                        <div class="form-text">JPG or PNG, max 2MB</div>
                                        <span asp-validation-for="PersonalImage" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Services Section -->
                <div class="form-section" id="services-section">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-concierge-bell me-2"></i> Services
                            </h5>
                            <button type="button" class="btn btn-sm btn-primary" id="addService">
                                <i class="fas fa-plus me-1"></i> Add Service
                            </button>
                        </div>
                        <div class="card-body">
                            <div id="servicesContainer">
                                @for (int i = 0; Model.Services != null && i < Model.Services.Count; i++)
                                {
                                    <div class="dynamic-list-item">
                                        <i class="fas fa-times remove-item" onclick="removeItem(this)"></i>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="@Model.Services[i].ServiceName" class="form-label">Service Name*</label>
                                                <input asp-for="@Model.Services[i].ServiceName" class="form-control" />
                                                <span asp-validation-for="@Model.Services[i].ServiceName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="@Model.Services[i].ServiceDescription" class="form-label">Service Description</label>
                                                <input asp-for="@Model.Services[i].ServiceDescription" class="form-control" />
                                                <span asp-validation-for="@Model.Services[i].ServiceDescription" class="text-danger"></span>
                                            </div>
                                    
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Projects Section -->
                <div class="form-section" id="projects-section">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-project-diagram me-2"></i> Projects
                            </h5>
                            <button type="button" class="btn btn-sm btn-primary" id="addProject">
                                <i class="fas fa-plus me-1"></i> Add Project
                            </button>
                        </div>
                        <div class="card-body">
                            <div id="projectsContainer">
                                @for (int i = 0; Model.Projects != null && i < Model.Projects.Count; i++)
                                {
                                    <div class="dynamic-list-item">
                                        <i class="fas fa-times remove-item" onclick="removeItem(this)"></i>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="@Model.Projects[i].ProjectName" class="form-label">Project Name*</label>
                                                <input asp-for="@Model.Projects[i].ProjectName" class="form-control" />
                                                <span asp-validation-for="@Model.Projects[i].ProjectName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="@Model.Projects[i].ProjectLink" class="form-label">Project Link</label>
                                                <input asp-for="@Model.Projects[i].ProjectLink" class="form-control" />
                                                <span asp-validation-for="@Model.Projects[i].ProjectLink" class="text-danger"></span>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="@Model.Projects[i].ProjectDescription" class="form-label">Project Description*</label>
                                                <textarea asp-for="@Model.Projects[i].ProjectDescription"
                                                          class="form-control"
                                                          rows="3"></textarea>
                                                <span asp-validation-for="@Model.Projects[i].ProjectDescription" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-4">
                                                <label asp-for="@Model.Projects[i].StartDate" class="form-label">Start Date*</label>
                                                <input asp-for="@Model.Projects[i].StartDate"
                                                       type="date"
                                                       class="form-control" />
                                                <span asp-validation-for="@Model.Projects[i].StartDate" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-4">
                                                <label asp-for="@Model.Projects[i].EndDate" class="form-label">End Date</label>
                                                <input asp-for="@Model.Projects[i].EndDate"
                                                       type="date"
                                                       class="form-control" />
                                                <span asp-validation-for="@Model.Projects[i].EndDate" class="text-danger"></span>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="@Model.Projects[i].ProjectImage" class="form-label">Project Image</label>
                                                <div class="d-flex align-items-start">
                                                    <img src="data:@Model.Projects[i].ImageContentType;base64,@Model.Projects[i].ImageBase64"
                                                         class="project-image-preview me-4"
                                                         style="max-width: 200px;"
                                                         alt="Preview" />
                                                    <div class="flex-grow-1">
                                                        <input asp-for="@Model.Projects[i].ProjectImage"
                                                               type="file"
                                                               class="form-control"
                                                               accept="image/*" />
                                                        <div class="form-text">JPG or PNG, max 2MB</div>
                                                        <span asp-validation-for="@Model.Projects[i].ImageFileName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <input type="hidden" asp-for="@Model.Projects[i].ImageBase64" />
                                            <input type="hidden" asp-for="@Model.Projects[i].ImageFileName" />
                                            <input type="hidden" asp-for="@Model.Projects[i].ImageContentType" value="@Model.Projects[i].ImageContentType" />
                                         
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Skills Section -->
                <div class="form-section" id="skills-section">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-lightbulb me-2"></i> Skills
                            </h5>
                            <button type="button" class="btn btn-sm btn-primary" id="addSkill">
                                <i class="fas fa-plus me-1"></i> Add Skill
                            </button>
                        </div>
                        <div class="card-body">
                            <div id="skillsContainer">
                                @for (int i = 0; Model.Skills != null && i < Model.Skills.Count; i++)
                                {
                                    <div class="dynamic-list-item">
                                        <i class="fas fa-times remove-item" onclick="removeItem(this)"></i>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="@Model.Skills[i].SkillName" class="form-label">Skill Name*</label>
                                                <input asp-for="@Model.Skills[i].SkillName" class="form-control" />
                                                <span asp-validation-for="@Model.Skills[i].SkillName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="@Model.Skills[i].SkillType" class="form-label">Skill Type*</label>
                                                <select asp-for="@Model.Skills[i].SkillType" class="form-select">
                                                    <option value="">Select type</option>
                                                    <option>Programming Language</option>
                                                    <option>Framework</option>
                                                    <option>Tool</option>
                                                    <option>Design</option>
                                                </select>
                                                <span asp-validation-for="@Model.Skills[i].SkillType" class="text-danger"></span>
                                            </div>
                               
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-save me-2"></i> Save Changes
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/EditPortfolio.js" asp-append-version="true"></script>
}
