    .profile-img {
        width: 220px;
        height: 220px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid white;
        box-shadow: var(--box-shadow);
        margin-bottom: var(--spacing-lg);
        transition: var(--transition);
    }

    .hero h1 {
        font-size: 3.5rem;
        margin-bottom: var(--spacing-md);
        color: var(--dark-gray);
        font-weight: 700;
    }

    .hero p.lead {
        font-size: 1.5rem;
        color: var(--gray);
        margin-bottom: var(--spacing-lg);
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        font-weight: 300;
    }

    .social-icons {
        display: flex;
        justify-content: center;
        gap: var(--spacing-md);
        margin-bottom: var(--spacing-lg);
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--light);
        border: 1px solid var(--medium-gray);
        color: var(--dark-gray);
        font-size: 1.25rem;
        box-shadow: var(--box-shadow);
        transition: var(--transition);
        text-decoration: none;
    }

        .social-icon:hover {
            background: var(--dark-gray);
            color: white;
            transform: translateY(-5px);
        }

    .btn {
        display: inline-block;
        padding: 0.9rem 2.5rem;
        font-weight: 600;
        border-radius: var(--border-radius);
        text-decoration: none;
        transition: var(--transition);
        border: none;
        cursor: pointer;
        font-size: 1.1rem;
        position: relative;
        overflow: hidden;
    }

    .btn-primary {
        background: var(--dark-gray);
        color: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .btn-primary:hover {
            background: var(--primary);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

    .btn-outline {
        background: transparent;
        border: 2px solid var(--dark-gray);
        color: var(--dark-gray);
    }

        .btn-outline:hover {
            background: var(--dark-gray);
            color: white;
            transform: translateY(-3px);
        }

    /* About Section */
    .about .card {
        border-radius: var(--border-radius);
        overflow: hidden;
    }

    .about .card-body {
        padding: var(--spacing-lg);
    }

    .about .card-title {
        font-size: 1.6rem;
        margin-bottom: var(--spacing-md);
        color: var(--dark-gray);
        border-bottom: 2px solid var(--medium-gray);
        padding-bottom: 0.5rem;
        display: inline-block;
    }

    /* Services */
    .services {
        background: var(--light-gray);
    }

    .service-card {
        height: 100%;
        border-radius: var(--border-radius);
        overflow: hidden;
        transition: var(--transition);
        background: var(--light);
        border: 1px solid var(--medium-gray);
        box-shadow: var(--box-shadow);
        padding: var(--spacing-lg);
        text-align: center;
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        }

    .service-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: var(--light-gray);
        color: var(--dark-gray);
        font-size: 1.8rem;
        margin-bottom: var(--spacing-md);
        transition: var(--transition);
    }

    .service-card:hover .service-icon {
        background: var(--dark-gray);
        color: white;
    }

    .service-card h4 {
        color: var(--dark-gray);
        margin-bottom: var(--spacing-sm);
    }

    /* Skills Section */
    .skills {
        position: relative;
        overflow: hidden;
    }

    .skills-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: var(--spacing-md);
    }

    .skill-box {
        background: var(--light);
        border: 1px solid var(--medium-gray);
        border-radius: var(--border-radius);
        padding: var(--spacing-lg);
        text-align: center;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .skill-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
            border-color: var(--primary);
        }

    .skill-icon {
        font-size: 2.5rem;
        color: var(--dark-gray);
        margin-bottom: var(--spacing-sm);
        transition: var(--transition);
    }

    .skill-box:hover .skill-icon {
        color: var(--primary);
    }

    .skill-level {
        display: block;
        font-size: 0.85rem;
        color: var(--gray);
        margin-top: 0.25rem;
        font-weight: 500;
    }

    /* Projects */
    .projects {
        background: var(--light-gray);
    }

    .project-card {
        margin-bottom: var(--spacing-lg);
        border-radius: var(--border-radius);
        overflow: hidden;
        transition: var(--transition);
        background: var(--light);
        border: 1px solid var(--medium-gray);
        box-shadow: var(--box-shadow);
    }

        .project-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .project-card img {
            height: 280px;
            object-fit: cover;
            width: 100%;
            transition: transform 0.5s ease;
            border-bottom: 1px solid var(--medium-gray);
        }

        .project-card:hover img {
            transform: scale(1.03);
        }

        .project-card .card-body {
            padding: var(--spacing-lg);
        }

    .badge {
        padding: 0.5rem 1.2rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.85rem;
    }

        .badge.bg-success {
            background: var(--primary);
            color: white;
        }

        .badge.bg-secondary {
            background: var(--accent);
            color: white;
        }

    /* Contact */
    .contact .card {
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
    }

    .form-control {
        padding: 0.9rem 1.2rem;
        border: 1px solid var(--medium-gray);
        border-radius: var(--border-radius);
        transition: var(--transition);
        width: 100%;
        margin-bottom: var(--spacing-md);
        background: var(--light);
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: var(--dark-gray);
            outline: none;
            box-shadow: 0 0 0 3px rgba(74, 74, 74, 0.1);
        }

    /* Footer */
    footer {
        background: var(--dark-gray);
        color: white;
        padding: var(--spacing-xl) 0 var(--spacing-md);
        position: relative;
        overflow: hidden;
    }

        footer h5 {
            color: white;
            margin-bottom: var(--spacing-md);
            position: relative;
            z-index: 1;
        }

        footer p, footer li {
            color: rgba(255, 255, 255, 0.8);
            position: relative;
            z-index: 1;
        }

    .footer-link {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: var(--transition);
        position: relative;
        z-index: 1;
    }

        .footer-link:hover {
            color: white;
            text-decoration: none;
        }

    .footer-social {
        display: flex;
        gap: var(--spacing-md);
        margin-top: var(--spacing-md);
    }

        .footer-social a {
            color: white;
            font-size: 1.3rem;
            transition: var(--transition);
            position: relative;
            z-index: 1;
        }

            .footer-social a:hover {
                color: var(--secondary);
                transform: translateY(-3px);
            }

    .copyright {
        padding-top: var(--spacing-lg);
        text-align: center;
        border-top: 1px solid rgba(255, 255, 255, 0.15);
        margin-top: var(--spacing-lg);
        position: relative;
        z-index: 1;
        color: rgba(255, 255, 255, 0.6);
    }

    /* Animation */
    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .animate {
        animation: fadeIn 0.8s ease forwards;
        opacity: 0;
    }

    .delay-1 {
        animation-delay: 0.1s;
    }

    .delay-2 {
        animation-delay: 0.2s;
    }

    .delay-3 {
        animation-delay: 0.3s;
    }

    /* Responsive Design */
    media (max-width: 992px) {
        .hero h1

    {
        font-size: 3rem;
    }

    .section-title {
        font-size: 2.2rem;
    }

    }

    media (max-width: 768px) {
        .hero

    {
        min-height: auto;
        padding: 120px 0 80px;
    }

    .hero h1 {
        font-size: 2.5rem;
    }

    .profile-img {
        width: 180px;
        height: 180px;
    }

    .section-title {
        font-size: 2rem;
    }

    .navbar {
        padding: 1rem 0;
    }

    .skills-container {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    }

    }

    media (max-width: 576px) {
        .hero h1

    {
        font-size: 2.2rem;
    }

    .section-title {
        font-size: 1.8rem;
    }

    .btn {
        padding: 0.75rem 1.8rem;
        font-size: 1rem;
    }

    .skills-container {
        grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
    }

    }
</style>

