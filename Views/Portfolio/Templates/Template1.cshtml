    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#">@Model.FirstName @Model.LastName[0].</a>
            <button class="navbar-toggler" type="button">
                <span class="navbar-toggler-icon">☰</span>
            </button>
            <div class="navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#projects">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero" id="home">
        <div class="container">
            @if (!string.IsNullOrEmpty(Model.ImageBase64))
            {
                <img src="data:@Model.ImageContentType;base64,@Model.ImageBase64"
                     alt="@Model.FirstName @Model.LastName"
                     class="profile-img">
            }
            else
            {
                <div class="profile-img-placeholder">
                    <i class="fas fa-user-circle" style="font-size: 180px; color: var(--primary);"></i>
                </div>
            }
            <h1>@Model.FirstName @Model.LastName</h1>
            <p class="lead">@Model.Title</p>
            <div class="social-icons">
                @if (!string.IsNullOrEmpty(Model.GitHubLink))
                {
                    <a href="@Model.GitHubLink" class="social-icon" target="_blank"><i class="fab fa-github"></i></a>
                }
                @if (!string.IsNullOrEmpty(Model.LinkedinLink))
                {
                    <a href="@Model.LinkedinLink" class="social-icon" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                }
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <a href="mailto:@Model.Email" class="social-icon"><i class="fas fa-envelope"></i></a>
                }
            </div>
            <a href="#projects" class="btn btn-primary mt-3">View My Work</a>
            <a href="#contact" class="btn btn-outline mt-3 ms-3">Contact Me</a>
        </div>
    </section>

    <!-- About Section -->
    <section class="about section" id="about">
        <div class="container">
            <h2 class="section-title">About Me</h2>
            <div class="row">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="card p-4 h-100">
                        <h3 class="mb-4">Professional Profile</h3>
                        <p class="lead mb-4">@Model.Summery</p>
                        @if (!string.IsNullOrEmpty(Model.Summery))
                        {
                            <p>@Model.Summery</p>
                        }
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Personal Info</h5>
                            <ul class="list-unstyled">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <li class="mb-3 d-flex align-items-center">
                                        <i class="fas fa-envelope me-3 text-dark"></i>
                                        <span>@Model.Email</span>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <li class="mb-3 d-flex align-items-center">
                                        <i class="fas fa-phone me-3 text-dark"></i>
                                        <span>@Model.PhoneNumber</span>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    <li class="mb-3 d-flex align-items-center">
                                        <i class="fas fa-map-marker-alt me-3 text-dark"></i>
                                        <span>@Model.Address</span>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(Model.LinkedinLink))
                                {
                                    <li class="mb-3 d-flex align-items-center">
                                        <i class="fab fa-linkedin me-3 text-dark"></i>
                                        <span>@Model.LinkedinLink</span>
                                    </li>
                                }
                            </ul>
                            <div class="mt-4">
                                <a href="#contact" class="btn btn-outline w-100">Get in Touch</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
@if (Model.Services != null)
{
        <section class="services section" id="services">
            <div class="container">
                <h2 class="section-title">My Services</h2>
                <div class="row">
                    @foreach (var service in Model.Services)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="service-card">
                                @* <div class="service-icon">
                                    <i class="@service.IconClass"></i>
                                </div> *@
                                <h4>@service.ServiceName</h4>
                                <p>@service.ServiceDescription</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
}

    <!-- Projects Section -->
@if (Model.Projects != null)
{
        <section class="projects section" id="projects">
            <div class="container">
                <h2 class="section-title">Featured Projects</h2>
                <div class="row">
                    @foreach (var project in Model.Projects)
                    {
                        <div class="col-lg-6 mb-4">
                            <div class="project-card">
                                @if (!string.IsNullOrEmpty(project.ImageBase64))
                                {
                                    <img src="data:@project.ImageContentType;base64,@project.ImageBase64"
                                         alt="@project.ProjectName">
                                }
                                else
                                {
                                    <div class="project-img-placeholder" style="height: 280px; background: var(--light-gray); display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-project-diagram fa-4x" style="color: var(--dark-gray);"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h4 class="card-title">@project.ProjectName</h4>
                                        @if (project.IsOngoing == true)
                                        {
                                            <span class="badge bg-success">Ongoing</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Completed</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(project.StartDate))
                                    {
                                        <p class="text-muted small mb-3">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            @project.StartDate
                                            @if (!string.IsNullOrEmpty(project.EndDate) && project.IsOngoing != true)
                                            {
                                                @:- @project.EndDate
                                            }
                                            else if (project.IsOngoing == true)
                                            {
                                                @:- Present
                                            }
                                        </p>
                                    }
                                    <p class="card-text mb-4">@project.ProjectDescription</p>
                                    <div class="d-flex">
                                        @if (!string.IsNullOrEmpty(project.ProjectLink))
                                        {
                                            <a href="@project.ProjectLink" target="_blank" class="btn btn-outline me-3">
                                                View Project
                                            </a>
                                        }
                                        <button class="btn btn-primary">Details</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
}

