@using Microsoft.AspNetCore.Identity
@inject SignInManager<Person> SignInManager
@inject UserManager<Person> UserManager
@model RizeUp.Models.AdminDashboardViewModel
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<!-- Main Content -->
<div class="main-content sidebar-toggle-animation">
    <!-- Top Header -->
    <header class="top-header">
        <button class="toggle-sidebar" id="sidebarToggle">
            <i class="bi bi-list"></i>
        </button>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="dropdown-item">
                <i class="bi bi-box-arrow-right me-2"></i>Logout
            </button>
        </form>
    </header>

    <!-- Dashboard Content -->
    <div class="dashboard-content">
        <!-- Welcome Card -->
        <div class="welcome-card">
            <h2>Admin Dashboard</h2>
            <p class="mb-0">Welcome back, Admin! Here's what's happening with RizeUp today.</p>
        </div>

        <!-- Stats Row -->
        <div class="row g-4 mb-4">
            <div class="col-md-6 col-lg-3">
                <div class="stat-card resumes">
                    <div class="stat-icon">
                        <i class="bi bi-file-earmark-text"></i>
                    </div>
                    <div class="stat-value">@Model.TotalResumes</div>
                    <div class="stat-label">Resumes Created</div>
                    <div class="text-success mt-2">
                        <i class="bi bi-arrow-up"></i> 12.5% from last month
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card portfolios">
                    <div class="stat-icon">
                        <i class="bi bi-collection"></i>
                    </div>
                    <div class="stat-value">@Model.TotalPortfolios</div>
                    <div class="stat-label">Portfolios Created</div>
                    <div class="text-success mt-2">
                        <i class="bi bi-arrow-up"></i> 8.3% from last month
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card users">
                    <div class="stat-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="stat-value">@Model.TotalUsers</div>
                    <div class="stat-label">Registered Users</div>
                    <div class="text-success mt-2">
                        <i class="bi bi-arrow-up"></i> 5.2% from last month
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card deleted">
                    <div class="stat-icon">
                        <i class="bi bi-trash"></i>
                    </div>
                    <div class="stat-value">128</div>
                    <div class="stat-label">Deleted Items</div>
                    <div class="text-danger mt-2">
                        <i class="bi bi-arrow-down"></i> 3.1% from last month
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts and Tables Row -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="chart-card">
                    <h4 class="card-title">
                        <i class="bi bi-bar-chart"></i>
                        Platform Activity
                    </h4>
                    <div class="chart-container">
                        <div class="d-flex align-items-end" style="height: 100%; gap: 10px;">
                            <div class="chart-bar-1" style="width: 14%; height: 70%; border-radius: 5px 5px 0 0;"></div>
                            <div class="chart-bar-2" style="width: 14%; height: 85%; border-radius: 5px 5px 0 0;"></div>
                            <div class="chart-bar-1" style="width: 14%; height: 65%; border-radius: 5px 5px 0 0;"></div>
                            <div class="chart-bar-3" style="width: 14%; height: 90%; border-radius: 5px 5px 0 0;"></div>
                            <div class="chart-bar-2" style="width: 14%; height: 75%; border-radius: 5px 5px 0 0;"></div>
                            <div class="chart-bar-1" style="width: 14%; height: 60%; border-radius: 5px 5px 0 0;"></div>
                            <div class="chart-bar-3" style="width: 14%; height: 50%; border-radius: 5px 5px 0 0;"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="chart-card">
                    <h4 class="card-title">
                        <i class="bi bi-pie-chart"></i>
                        User Distribution
                    </h4>
                    <div class="chart-container d-flex justify-content-center align-items-center">
                        <div class="position-relative" style="width: 200px; height: 200px; border-radius: 50%;
                                background: conic-gradient(
                                    var(--primary-color) 0% 45%,
                                    var(--accent-color) 45% 70%,
                                    #AED581 70% 85%,
                                    #C8E6C9 85% 100%
                                );">
                            <div class="position-absolute top-50 start-50 translate-middle"
                                 style="width: 100px; height: 100px; background: white; border-radius: 50%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tables Row -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="table-card">
                    <h4 class="card-title">
                        <i class="bi bi-clock-history"></i>
                        Recent Activity
                    </h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Activity</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentActivity != null && Model.RecentActivity.Any())
                                {
                                    foreach (var activity in Model.RecentActivity)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="user-avatar me-2" style="width:30px;height:30px;font-size:0.8rem; background-color: var(--primary-color);">
                                                        @activity.UserName.Substring(0, 2).ToUpper()
                                                    </div>
                                                    <span>@activity.UserName</span>
                                                </div>
                                            </td>
                                            <td>@activity.ActivityType</td>
                                            <td>@activity.ActivityDate.ToString("g")</td>
                                            <td><span class="status-badge badge-active">@activity.Status</span></td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary">View</button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No recent activity found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="table-card">
                    <h4 class="card-title">
                        <i class="bi bi-chat-left-text"></i>
                        Recent Reviews
                    </h4>
                    @if (Model.UserReviews != null && Model.UserReviews.Any())
                    {
                        foreach (var review in Model.UserReviews)
                        {
                            <div class="review-card">
                                <div class="review-header">
                                    <div class="review-avatar" style="background-color: #e8f5e9; color: var(--primary-color);">
                                        @review.UserName.Substring(0, 2).ToUpper()
                                    </div>
                                    <div class="review-user">
                                        <h5>@review.UserName</h5>
                                        <small>@review.Title</small>
                                    </div>
                                </div>
                                <div class="review-content">
                                    @review.Content
                                </div>
                                <div class="review-footer">
                                    <div class="review-date">@review.ReviewDate.ToString("MMM dd, yyyy")</div>
                                    <div class="review-actions">
                                        <button class="btn-approve"><i class="bi bi-check-circle"></i> Approve</button>
                                        <button class="btn-delete"><i class="bi bi-trash"></i></button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No reviews found
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Toggle sidebar on mobile
    document.getElementById('sidebarToggle').addEventListener('click', function() {
        const sidebar = document.querySelector('.sidebar');
        const mainContent = document.querySelector('.main-content');

        sidebar.classList.toggle('active');
        mainContent.classList.toggle('sidebar-active');
    });

    // Simulate chart data animation
    document.addEventListener('DOMContentLoaded', function() {
        const bars = document.querySelectorAll('[class*="chart-bar-"]');
        bars.forEach(bar => {
            const height = bar.style.height;
            bar.style.height = '0';
            setTimeout(() => {
                bar.style.height = height;
            }, 300);
        });
    });
</script>

