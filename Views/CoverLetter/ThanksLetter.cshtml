<script>
    document.addEventListener('DOMContentLoaded', function() {
        const textarea = document.getElementById('jobInfo');
        const wordCount = document.querySelector('.word-count');
        const generateBtn = document.getElementById('generateBtn');
        const previewSection = document.getElementById('previewSection');
        const letterPreview = document.getElementById('letterPreview');
        const copyBtn = document.getElementById('copyBtn');

        // Update word count
        textarea.addEventListener('input', function() {
            const text = textarea.value.trim();
            const words = text ? text.split(/\s+/).length : 0;
            wordCount.textContent = `${words}/1000 words`;
            wordCount.style.color = words > 1000 ? '#e74c3c' : '#777';
        });

        // Generate letter
        generateBtn.addEventListener('click', function() {
            const content = textarea.value.trim();

            if (!content) {
                alert('Please paste some job information before generating a letter.');
                return;
            }

            // Show loading state
            generateBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Generating...';
            generateBtn.disabled = true;

            // Simulate AI processing
            setTimeout(function() {
                // Generate sample letter based on input
                const companyMatch = content.match(/(company|organization|firm)\s+(is\s+)?([\w\s]+)/i);
                const companyName = companyMatch ? companyMatch[3] : 'your company';

                const positionMatch = content.match(/(position|role)\s+(of\s+)?([\w\s]+)/i);
                const positionName = positionMatch ? positionMatch[3] : 'the position';

                const nameMatch = content.match(/(interviewer|manager|hiring)\s+(name\s+is\s+)?([\w\s]+)/i);
                const interviewerName = nameMatch ? nameMatch[3] : '[Interviewer Name]';

                // Sample thank you letter template
                const letter = `
                    <p>Dear ${interviewerName},</p>

                    <p>Thank you so much for taking the time to speak with me today about the ${positionName} position at ${companyName}. I truly enjoyed learning more about the opportunity and the work your team is doing.</p>

                    <p>I was particularly excited to hear about [specific topic discussed during interview]. My experience in [relevant experience] aligns well with this aspect of the role, and I'm confident I could contribute meaningfully in this area.</p>

                    <p>After our conversation, I'm even more enthusiastic about the possibility of joining ${companyName}. The [specific value or culture aspect mentioned] you described resonates strongly with my own professional values and approach to work.</p>

                    <p>I appreciate you considering me for this opportunity. Please don't hesitate to reach out if you need any additional information from me. I look forward to hearing about the next steps in the process.</p>

                    <p>Sincerely,</p>
                    <p>[Your Name]<br>
                    [Your Phone Number]<br>
                    [Your Email Address]</p>
                `;

                letterPreview.innerHTML = letter;
                previewSection.style.display = 'block';

                // Reset button
                generateBtn.innerHTML = '<i class="fas fa-bolt me-2"></i> GENERATE LETTER';
                generateBtn.disabled = false;

                // Scroll to preview
                previewSection.scrollIntoView({ behavior: 'smooth' });
            }, 1500);
        });

        // Copy to clipboard
        copyBtn.addEventListener('click', function() {
            const textToCopy = letterPreview.innerText;

            navigator.clipboard.writeText(textToCopy).then(() => {
                // Show confirmation
                const originalText = copyBtn.innerHTML;
                copyBtn.innerHTML = '<i class="fas fa-check me-1"></i> Copied!';

                setTimeout(() => {
                    copyBtn.innerHTML = originalText;
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy: ', err);
                alert('Failed to copy text to clipboard.');
            });
        });
    });
</script>

