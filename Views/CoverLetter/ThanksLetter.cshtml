<!-- Generator Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="section-title">
                    <h2>Create Your Thank You Letter</h2>
                    <p class="text-muted">Simply paste the required information and let our AI do the rest</p>
                </div>

                <div class="features-container">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <h4>Paste Job Details</h4>
                        <p>Copy and paste the job description or requirements to help us customize your letter.</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-envelope-open-text"></i>
                        </div>
                        <h4>Share Interview Notes</h4>
                        <p>Include key points from your interview conversation for a personalized touch.</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-magic"></i>
                        </div>
                        <h4>Generate Instantly</h4>
                        <p>Our AI creates a polished, professional thank you letter tailored to your interview.</p>
                    </div>
                </div>

                <div class="generator-container">
                    <h3 class="mb-4">What To Paste?</h3>
                    <p class="text-muted mb-4">Paste any of the following to help our AI create the perfect thank you letter:</p>

                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <span class="step-number">1</span>
                            <span>Job description or requirements</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <span class="step-number">2</span>
                            <span>Previous emails with the interviewer</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="step-number">3</span>
                            <span>Any relevant notes about the position or company</span>
                        </div>
                    </div>

                    <form asp-action="CreateLetter" asp-controller="CoverLetter" method="post" id="letterForm">
                        <div class="mb-3">
                            <label class="input-label">Paste job post, previous emails, or any relevant information:</label>
                            <div class="textarea-container">
                                <textarea name="details" class="form-control" id="jobInfo" rows="6" placeholder="Paste the job description, interview notes, or any relevant information here. Make sure to include the role, company name, and any specific details you want to highlight."></textarea>
                                <div class="word-count">0/1000 words</div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-accent btn-lg" id="generateBtn">
                                <i class="fas fa-bolt me-2"></i> GENERATE LETTER
                            </button>
                        </div>
                    </form>

                   
                </div>

                <div class="preview-container" id="previewSection">
                    <div class="preview-header">
                        <h3>Your AI-Generated Thank You Letter</h3>
                        <button class="btn btn-primary btn-copy" id="copyBtn">
                            <i class="fas fa-copy me-1"></i> Copy
                        </button>
                    </div>
                    <div class="preview-content" id="letterPreview">
                        <div class="preview-container" id="previewSection" style="display: @(Model != null ? "block" : "none")">
                            <div class="preview-header">
                                <h3>Your AI-Generated Thank You Letter</h3>
                                <button class="btn btn-primary btn-copy" id="copyBtn">
                                    <i class="fas fa-copy me-1"></i> Copy
                                </button>
                            </div>
                            <div class="preview-content" id="letterPreview">
                                @if(Model != null)
                                {
                                    <div class="email-card">
                                        <div class="email-header">
                                            <small class="text-muted">Subject:</small>
                                            <strong>@Model.Subject</strong>
                                        </div>

                                        <div class="email-body">
                                            <p>Dear @Model.InterviewerName,</p>

                                            @foreach (var paragraph in Model.BodyParagraphs)
                                            {
                                                <p>@paragraph</p>
                                            }

                                            <p>@Model.ClosingLine</p>
                                            <p>Best regards,</p>
                                            <p><strong>@Model.SenderName</strong></p>
                                        </div>

                                        <div class="email-footer text-center">
                                            <a href="@Model.LinkedInProfile" target="_blank" class="me-3">
                                                <i class="bi bi-linkedin"></i> LinkedIn
                                            </a>
                                            <a href="tel:@Model.PhoneNumber">
                                                <i class="bi bi-telephone"></i> @Model.PhoneNumber
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

