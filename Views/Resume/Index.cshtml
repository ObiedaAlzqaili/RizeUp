
@{
    ViewData["Title"] = "Resumes";
}
<link rel="stylesheet" href="~/css/ResumePage.css" asp-append-version="true" />

<!-- Main Content -->
<div class="container py-4">
    <!-- Welcome Header -->
    <div class="welcome-header">
        <div class="container">
            <h3 class="mb-1">Welcome back, <strong>Obaida Alzogilli</strong></h3>
            <p class="text-muted mb-0">You have 3 resumes</p>
        </div>
    </div>

    <!-- Document Navigation -->
    <div class="document-nav">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active" href="#">All documents</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Resumes (3)</a>
            </li>
            
        </ul>
    </div>

    <!-- Action Row -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <a class="btn btn-primary mb-3 mb-md-0" asp-action="NewResume" asp-controller="Resume">
            <i class="bi bi-plus-lg me-2"></i>New Resume
        </a>

        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" class="form-control" placeholder="Search resumes...">
        </div>
    </div>

    <!-- Tip Box -->
    <div class="tip-box">
        <strong>TIP:</strong> Did you know that tailoring your resume to the job description can double your interview chances?
    </div>

    <!-- Resumes List -->
    <div class="resumes-list">
        <!-- Resume Card 1 -->
        <div class="resume-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h4 class="resume-title">Software Engineer Resume</h4>
                    <div class="resume-meta">
                        <span>Last edited: May 15, 2024</span> •
                        <span>Created: May 5, 2024</span>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-eye me-2"></i>Preview</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-download me-2"></i>Download</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-trash me-2"></i>Delete</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-3 action-buttons">
                <a href="#" class="btn btn-sm btn-outline-primary action-btn">
                    <i class="bi bi-pencil me-1"></i>Edit
                </a>
                <a href="#" class="btn btn-sm btn-outline-secondary action-btn">
                    <i class="bi bi-eye me-1"></i>Preview
                </a>
                <a href="#" class="btn btn-sm btn-outline-secondary action-btn">
                    <i class="bi bi-download me-1"></i>Download
                </a>
            </div>
        </div>

        <!-- Resume Card 2 -->
        <div class="resume-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h4 class="resume-title">Web Developer Resume</h4>
                    <div class="resume-meta">
                        <span>Last edited: April 28, 2024</span>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-eye me-2"></i>Preview</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-download me-2"></i>Download</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-trash me-2"></i>Delete</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-3 action-buttons">
                <a href="#" class="btn btn-sm btn-outline-primary action-btn">
                    <i class="bi bi-pencil me-1"></i>Edit
                </a>
                
                <a href="#" class="btn btn-sm btn-outline-secondary action-btn">
                    <i class="bi bi-eye me-1"></i>Preview
                </a>
                <a href="#" class="btn btn-sm btn-outline-secondary action-btn">
                    <i class="bi bi-download me-1"></i>Download
                </a>
            </div>
        </div>

        <!-- Resume Card 3 -->
       

    <!-- Empty State (Hidden) -->
    <div class="empty-state" style="display: none;">
        <div class="empty-state-icon">
            <i class="bi bi-file-earmark-text"></i>
        </div>
        <h4>No resumes yet</h4>
        <p class="text-muted mb-4">Create your first resume to get started</p>
        <a href="/resumes/new" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Create New Resume
        </a>
    </div>
</div>
<script src="~/js/ResumePage.js" asp-append-version="true"></script>