    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Use your form's ID or selector
            const form = document.querySelector('form#resumeForm'); // Adjust selector if needed!
            const loader = document.getElementById('resume-loader-overlay');
            const progressBar = loader ? loader.querySelector('#progressBar') : null;
            const statusText = loader ? loader.querySelector('#statusText') : null;

            if (form && loader) {
                form.addEventListener('submit', function (e) {
                    loader.classList.add('active');
                    document.body.style.overflow = 'hidden'; // Disable scroll
                    // Animate progress bar and status
                    let progress = 0;
                    let currentStatus = 0;
                    const statusMessages = [
                        "Analyzing your experience",
                        "Optimizing content for ATS",
                        "Designing professional layout",
                        "Finalizing your resume",
                        "Almost done..."
                    ];

                    const interval = setInterval(() => {
                        progress += 2 + Math.random() * 4;
                        if (progress >= 100) {
                            progress = 100;
                            clearInterval(interval);
                        }
                        if (progressBar) progressBar.style.width = progress + '%';

                        // Update status text every 20% progress
                        if (progress > (currentStatus + 1) * 20 && currentStatus < statusMessages.length) {
                            if (statusText) statusText.textContent = statusMessages[currentStatus];
                            currentStatus++;
                        }

                        // Final message when complete
                        if (progress >= 100) {
                            if (statusText) statusText.textContent = "Resume complete! Redirecting...";
                        }
                    }, 200);
                });
            }
        });


